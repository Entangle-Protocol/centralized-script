{
    "name": "backend-script",
    "version": "1.0.0",
    "main": "src/index.ts",
    "license": "MIT",
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.2",
        "@testdeck/mocha": "^0.2.1",
        "@types/chai": "^4.3.3",
        "@types/module-alias": "^2.0.1",
        "@types/node": "^18.6.2",
        "@typescript-eslint/eslint-plugin": "^5.31.0",
        "@typescript-eslint/parser": "^5.31.0",
        "chai": "^4.3.6",
        "eslint": "^8.20.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-prettier-config": "^1.0.1",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "mocha": "^10.0.0",
        "nyc": "^15.1.0",
        "prettier": "^2.7.1",
        "ts-mockito": "^2.6.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.0",
        "typescript": "^4.7.4"
    },
    "dependencies": {
        "chalk": "4.1.2",
        "dotenv": "^16.0.2",
        "pg": "^8.8.0",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.21.6",
        "web3": "^1.7.4"
    },
    "scripts": {
        "lint": "eslint . --ext .ts",
        "prettier": "prettier 'src/**/*.ts'",
        "prettier:fix": "prettier --write 'src/**/*.ts'",
        "dev": "ts-node -r tsconfig-paths/register src/index.ts",
        "test": "nyc ./node_modules/.bin/_mocha 'test/**/*.ts'",
        "build": "tsc",
        "prod": "yarn build && TS_NODE_BASEURL=./dist node -r tsconfig-paths/register dist/index.js",
        "prepare": "husky install"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.ts": [
            "eslint --fix --color"
        ]
    }
}
